# To write simple array code
import array as arr 
numbers = arr.array('i',[10,20,30])
print(numbers)


# To find the length of an array
import array as arr
num = arr.array('i',[1,2,3,4])
print(len(num))  # here we use python in built method len()


# Print array with and without indexing
array = [1,3,5,7]
for item in array:
   print(item)
print("\n Print first three items from list")
for i in range(3):  # here we use range function which is in built in python, it mostly used by FOR loop 
   print(array[i])


# Array code using append function ( to add some value in the last)
import array as arr
my_arr = arr.array('i',[1,2,3])
print("Print original array")
print(my_arr)
my_arr.append(4)
print("Print array after append")
print(my_arr)


# Array program using reverse funtion 
import array as arr
num = arr.array('i',[1,2,3,4,5])
print("Array without reversing ")
print(num)
print("Array after reversing")
num.reverse()
print(num)




# Array program to find the size of one item in whole array list
import array as arr
num = arr.array('i',[1,2,3,4,5])
print(num)
item_size = num.itemsize    # here we use item size function to find the size of one element from the whole arrray list
print("item size in bytes")
print(item_size)



# Prograam to use count method we use this method to count how many times one values is repeated
import array
num = array.array('i',[1,2,3,4,5,3,5,4,5,5])
print(num)

element_to_count= 3
occurrences = num.count(element_to_count)
print("Number that repeats")
print(occurrences)




































